@model AASTHA.Models.AdminModel

@{
    Layout = null;
}

@using (Ajax.BeginForm("AddEdit_Advice", "IPD", new AjaxOptions { UpdateTargetId = "Grid_Advice", OnBegin = "blockui_leftgrid", OnComplete = "unblockui_leftgrid", OnSuccess = "OnSuccess" }))
{
    @Html.Hidden("page")
    <div class="row">
        <div class="col-md-12 textContainer">
            <div class="form-group">
                <div class="input-group"> @Html.TextBoxFor(model => model.Advice_Text, new { @class = "form-control Capitalize", placeholder = "Enter Advice Title" }) <span class="input-group-btn"> <input class="btn btn-primary btnadd" type="submit" value="Save Changes"></span> </div>
                @Html.ValidationMessageFor(m => m.Advice_Text)
            </div>
        </div>
    </div>
}