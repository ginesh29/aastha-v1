@model AASTHA.Models.IPDModel
@{
    ViewBag.Title = "opd_invoice";
    Layout = null;
}
<link href="~/Content/css/Gujarati_Invoice_Style.css" rel="stylesheet" />
<script src="~/Scripts/jQuery.print.js"></script>
<script src="~/Content/js/amttoword.js"></script>
<div class="modal fade IPD_Invoice" id="print-modal">
    <div class="modal-dialog">
        <div class="modal-content printable">
            <div class="modal-header hidden-print">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">IPD Invoice</h4>
            </div>
            @Html.HiddenFor(m => m.IPD_Id_Print)
            <div class="modal-body">
                <img src="~/Content/images/invoice_logo.jpg" class="img-responsive">
                <h3 class="Invoice_Title">Indoor Invoice</h3>

                <div class="row">
                    <div class="col-xs-8">
                        <label>Patient Name : </label> <span id="PatientName"></span>
                    </div>

                    <div class="col-xs-4">
                        <label>Date : </label> <span id="IpdDate"></span>
                    </div>
                    <div class="col-xs-8">
                        <label>Invoice No. : </label> <span id="Invoice_Id"></span>
                    </div>

                    <div class="col-xs-4">
                        <label>Address : </label> <span id="Address"></span>
                    </div>
                    <div class="col-xs-8">
                        <label>Indoor No. : </label> <span id="IPD_Id1"></span>
                    </div>
                    <div class="col-xs-4">
                        <label>Room Type : </label> <span id="Room"></span>
                    </div>
                </div>

                <div class="row">
                    <div id="Invoice_Charges" class="col-lg-12">

                    </div>
                </div>

                <div class="row" style="margin-top:30px;">
                    <div class="col-xs-7">
                        <span>Rececived By</span>
                    </div>
                    <div class="col-xs-5 pull-right">
                        <strong>Dr. Bhaumik Tandel</strong>
                    </div>
                </div>
                <div class="modal-footer hidden-print">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-info" id="btnprint">Print Invoice</button>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    ul.ui-autocomplete {
        z-index: 1100;
    }

    #amtinword {
        text-transform: capitalize;
    }
</style>


<script type='text/javascript'>
    $(function () {
        $("#btnprint").click(function () {
            var num = $("#Total").text();
            var words = toWords(num);
            $("#amtinword").text(words + "Rupees Only");
            $(".printable").print({
            });
        });
    });

</script>