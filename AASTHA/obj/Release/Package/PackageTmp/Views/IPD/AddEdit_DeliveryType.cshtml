@model AASTHA.Models.AdminModel

@{
    Layout = null;
}

@using (Ajax.BeginForm("AddEdit_DeliveryType", "IPD", new AjaxOptions { UpdateTargetId = "Grid_Delivery", OnBegin = "blockui_leftgrid", OnComplete = "unblockui_leftgrid", OnSuccess = "OnSuccess" }))
{
    @Html.HiddenFor(m => m.page)

    <div class="row">
        <div class="col-md-12 textContainer">
            <div class="form-group">
                <div class="input-group"> @Html.TextBoxFor(model => model.Delivery_Type, new { @class = "form-control Capitalize", placeholder = "Enter Delivery Type Title" }) <span class="input-group-btn"> <input class="btn btn-primary btnadd" type="submit" value="Save Changes"></span> </div>
                @Html.ValidationMessageFor(m => m.Delivery_Type)
            </div>
        </div>
    </div>
}