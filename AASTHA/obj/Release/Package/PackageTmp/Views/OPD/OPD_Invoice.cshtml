@model AASTHA.Models.OPDModel
@{
    ViewBag.Title = "opd_invoice";
    Layout = null;
}
<link href="~/Content/css/Gujarati_Invoice_Style.css" rel="stylesheet" />
<script src="~/Scripts/jQuery.print.js"></script>
<script src="~/Content/js/amttoword.js"></script>
<div class="modal fade" id="print-modal">
    <div class="modal-dialog">
        <div class="modal-content printable">
            @Html.HiddenFor(m => m.OPD_Id_Print)
            <div class="modal-header hidden-print">
                <button type="button" class="close hidden-print" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">OPD Invoice</h4>
            </div>
            <div class="modal-body">
                <img src="~/Content/images/invoice_logo.jpg" class="img-responsive">

                <h3 class="Invoice_Title">Outdoor Invoice</h3>

                <div class="row">
                    <div class="col-xs-8">
                        <label>Patient Name : </label> <span id="PatientName"></span>
                    </div>

                    <div class="col-xs-4">
                        <label>Date : </label> <span id="OpdDate"></span>
                    </div>
                    <div class="col-xs-8">
                        <label>Invoice No. : </label> <span id="Invoice_Id"></span>
                    </div>

                    <div class="col-xs-4">
                        <label>Address : </label> <span id="Address"></span>
                    </div>
                    <div class="col-xs-8">
                        <label>Outdoor No. : </label> <span id="OPD_Id1"></span>
                    </div>
                </div>

                <table class="table table-bordered" id="OPD_Charge_Table">
                    <thead>
                        <tr>
                            <th width="10px">
                                No.
                            </th>

                            <th>
                                Description
                            </th>
                            <th width="20%" style="text-align:right">
                                Amount
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1.</td>
                            <td>Consulting Charge</td>
                            <td><span id="Cons"></span></td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>Ultrasonography Charge</td>
                            <td><span id="USG"></span></td>
                        </tr>
                        <tr>
                            <td>3.</td>
                            <td>Urine Test Charge</td>
                            <td style="text-align:right"><span id="UPT"></span></td>
                        </tr>
                        <tr>
                            <td>4.</td>
                            <td>Injection Charge</td>
                            <td><span id="Inj"></span></td>
                        </tr>
                        <tr>
                            <td>5.</td>
                            <td>Other Charge</td>
                            <td><span id="Other"></span></td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="2">Grand Total &nbsp;| <span id="amtinword"></span></td>
                            <td style="text-align:right"><strong id="Total"></strong></td>
                        </tr>
                    </tfoot>
                </table>
               

                <div class="row" style="margin-top:50px;">
                    <div class="col-xs-7">
                        <span>Rececived By</span>
                    </div>
                    <div class="col-xs-5 pull-right">
                        <strong>Dr. Bhaumik Tandel</strong>
                    </div>
                </div>
                <div class="modal-footer hidden-print">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-info" id="btnprint">Print Invoice</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script type='text/javascript'>
    $(function () {
        $("#btnprint").click(function () {
            $(".printable").print({
            });
        });
    });

</script>

<style>

    .table tr td:last-child {
        text-align: right;
    }

</style>